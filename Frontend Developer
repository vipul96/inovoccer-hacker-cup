<!-- Chart -->
<canvas id="myChart" width="400" height="400"></canvas>

<script>
var taskApp = new Vue({
  el: '#taskApp',
  data: {
    tasks: [
      { name: 'Grocery', done: false, price:'100', extra:''},
      { name: 'Entertainment', done: false, price:'120', extra:'' },
      { name: 'Vehicle', done: false, price:'30', extra:'' },
      { name: 'Food', done: false, price:'400', extra:'' },
      { name: 'Miscellaneous.', done: false, price:'130', extra:'' },
    ]
  },
  
  computed:{
    total : function(){
      let sum = 0;
      this.tasks.forEach(element => {
        sum += parseFloat(element.price);
      });
      return sum;
    }
  },
  methods: {
    addTask: function(e) {
      e.preventDefault();
      this.tasks.push({
        name: this.tasks.name,
        done: false,
        price: this.tasks.price
      });
    },
    deleteTask: function(task) {
      this.tasks.splice(this.tasks.indexOf(task), 1)
    },
    addPrice: function(task){
      if(isNaN(parseFloat(task.extra))){
        alert(" Please re-enter price");
      }
      else
      {
          task.price = parseFloat(task.price) + parseFloat(task.extra);
          task.extra = 0
      }
      
    }
    
  }
});
</script>

<script>
  // A $( document ).ready() block.
$( document ).ready(function() {
  var ctx = document.getElementById("myChart").getContext('2d');
  var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',

    // The data for our dataset
    data: {
        labels: ["January", "February", "March", "April", "May", "June", "July"],
        datasets: [{
            label: "My First dataset",
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: [0, 10, 5, 2, 20, 30, 45],
        }]
    },

    // Configuration options go here
    options: {}
  });
  console.log(myChart); 
});
</script>
